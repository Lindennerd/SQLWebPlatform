<div class="w3-card-4">
    <header class="w3-container w3-blue">
        <h1>{{title}}</h1>
    </header>
    <div class="w3-container">
        <form action="{{target}}" method="post" id="{{id}}">
            {{#each fields}}
            <p>
                <label>{{label}}</label>
                {{#ifCond type 'text'}}
                <input type="{{type}}" name="{{name}}" id="{{id}}" value="{{value}}" class="w3-input" />
                {{/ifCond}}
                {{#ifCond type 'password'}}
                <input type="{{type}}" name="{{name}}" id="{{id}}" value="{{value}}" class="w3-input" />
                {{/ifCond}}
                {{#ifCond type 'select'}}
                <select class="w3-select w3-border" name="{{name}}" id="{{id}}">
                    {{#each items}}
                        <option value="{{value}}">{{name}}</option>
                    {{/each}}
                </select>
                {{/ifCond}}
            </p>
            {{/each}}

            <p>
                <input type="submit" value="Enviar" class="w3-btn" />
            </p>
        </form>
    </div>
</div>

